[MASTER]
load-plugins = pylint_django
init-hook = 'import sys, os; sys.path.append("."); os.environ.setdefault("DJANGO_SETTINGS_MODULE", "backend.settings")'
ignore-patterns = ^migrations/, ^static/, ^CVS/  # Fixed ignore patterns

[MESSAGES CONTROL]
disable =
;     missing-docstring,
;     invalid-name,
;     too-few-public-methods,
;     duplicate-code,
    # Django-specific false positives
      no-member
;     unexpected-keyword-arg,
;     non-parent-init-called,
;     too-many-function-args

enable =
    consider-using-f-string,
    use-list-literal,
    use-dict-literal,
    consider-using-generator

[FORMAT]
max-line-length = 88  # Match Black/Ruff

[LOGGING]
# Require proper logging
logging-format-style = new  # Enforce {} formatting
logging-modules = logging,structlog

[REPORTS]
output-format = colorized
fail-under = 8.5  # Fail if code rating < 8.5/10

[DIALECT]
django-settings-module = backend.settings

[TYPECHECK]
ignored-modules = manage

[DESIGN]
max-args = 8  # For Django views

[CLASSES]
exclude-protected = _asdict,_fields,_replace,_source,_make

[BASIC]
good-names = i,id,_,pk,qs,user_id,request,cls,queryset,url,app,apps,contenttypes,registry

[IMPORTS]
# Django-specific imports configuration
known-third-party = django
preferred-modules = django.shortcuts:redirect,render
allow-wildcard-with-all = yes